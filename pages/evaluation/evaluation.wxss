@import "../../common/common.wxss";
.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  background: #fff;
}

.title view {
  color: #333;
  font-size: 34rpx;
  padding: 10rpx 30rpx;
}

.false {
  color: #999 !important;
}

.true {
  font-size: 34rpx !important;
  color: #000 !important;
}

.placeholder {
  font-size: 24rpx;
  color: #b2b2b2;
}

.question-wrap {
  background: #fff;
}

.question {
  padding-right: 30rpx;
  margin-left: 30rpx;
  height: 240rpx;
}

.clean {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 30rpx;
}

.clean image {
  height: 40rpx;
  width: 40rpx;
}

textarea {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  width: -webkit-calc(100%-60rpx);
  height: 240rpx;
  line-height: 42rpx;
}

.evaluation {
  display: flex;
  align-items: center;
}

.evaluation text {
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
}

.evaluation view {
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  border: 1rpx solid #b2b2b2;
  padding: 0;
}

.anonymity {
  background: url('data:image/png;base64,')no-repeat center;
  background-size: 40rpx;
  border: none !important;
}

.evaluation button {
  font-size: 32rpx;
  color: #fff;
  padding: 0 40rpx;
  background: #333;
  height: 68rpx;
  line-height: 68rpx;
  margin-left: 40rpx;
}

.question-title {
  height: 90rpx;
  padding-left: 30rpx;
  margin-top: 20rpx;
  background: #fff;
}

.question-title input {
  height: 90rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.video-wrap {
  padding: 30rpx;
  background: #fff;
}

.video {
  height: 396rpx;
  border: 2rpx #ddd dashed;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video image {
  width: 160rpx;
  height: 160rpx;
}