@import "../../common/common.wxss";
page {
  background: #fff;
}

input {
  height: 80rpx;
  line-height: 80rpx;
}

.mine-edit-top {
  display: flex;
}

.mine-edit-head {
  margin-top: 30rpx;
  padding-left: 30rpx;
}

.mine-edit-head text {
  font-size: 28rpx;
  color: #b2b2b2;
  text-align: center;
}

.mine-edit-head image {
  width: 136rpx;
  height: 136rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #b2b2b2;
}

.mine-edit-base {
  margin-top: 14rpx;
  flex-grow: 1;
  margin-left: 30rpx;
  font-size: 34rpx;
  color: #333;
}

.mt-40 {
  margin-top: 40rpx;
}

.mine-edit-base text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.mine-edit-detail {
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.actionSheet {
  display: flex;
  padding: 10rpx 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.actionSheet text {
  padding-right: 20rpx;
  text-align: center;
  border-right: 1rpx solid #e5e5e5;
}

.actionSheet view {
  padding-left: 20rpx;
  flex-grow: 1;
}

