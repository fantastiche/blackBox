@import "../../common/common.wxss";
.msg-top {
  background: #fff;
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.mgs-title {
  display: flex;
  background: url('data:image/png;base64,')no-repeat center right;
  background-size: 14rpx 26rpx;
}

.mgs-title image {
  width: 88rpx;
  height: 88rpx;
}

.mgs-title .grey-word {
  width: 75%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 20rpx;
}

.msg-title-wrap {
  flex-grow: 1;
  margin-left: 30rpx;
}

.mgs-title-private {
  position: relative
}

.msg-num {
  display: inline-block;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto 0;
  border-radius: 50%;
  text-align: center;
  font-size: 24rpx;
  background: #fe6270;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  margin-left: 20rpx;
}

.msg-content {
  margin-top: 20rpx;
  background: #fff;
}

.msg-content-title {
  height: 62rpx;
  line-height: 62rpx;
  text-align: right;
  padding-right: 30rpx;
}

.msg-content view:nth-child(2) {
  padding-top: 0;
}

.msg-reply {
  font-size: 28rpx !important;
}

.msg-content-main {
  display: flex;
  padding: 30rpx;
}

.msg-content-main-wrap {
  margin-left: 20rpx;
}

.msg-content-main-user {
  position: relative;
}

.msg-content-main-user text:nth-child(1) {
  font-size: 28rpx;
  color: #666;
  margin-right: 1em;
}

.mt-16 {
  margin-top: 16rpx;
}

.dot-position {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto 0;
}